{
  "name": "document-conversion-service",
  "version": "1.0.0",
  "description": "Microservices-based document conversion service for PPTX/DOCX to PDF/PNG",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "node dist/worker.js",
    "worker:dev": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["document", "conversion", "pdf", "png", "gotenberg"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0",
    "bull": "^4.11.5",
    "redis": "^4.6.10",
    "minio": "^7.1.3",
    "form-data": "^4.0.0",
    "archiver": "^6.0.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/archiver": "^6.0.2",
    "@types/form-data": "^2.5.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}

